<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ciastek.testv11.MainActivity"
    android:background="#fdfdfd">
    <include
        android:id="@+id/appbar"
        layout="@layout/app_bar"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageViewProduct2"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@+id/appbar"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="2dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_below="@+id/imageViewProduct2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15dp"
        android:textAlignment="center"
        android:ems="15"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
       />

    <TextView
        android:id="@+id/Opis_info"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/imageViewProduct2"
        android:layout_toEndOf="@+id/imageViewProduct2"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
       />
</RelativeLayout>

